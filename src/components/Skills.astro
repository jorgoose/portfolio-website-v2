---
import Icon from "./Icon.astro";
---

<section class="box skills">
  <h2>Skills</h2>
  <div class="skills-grid">
    <div class="skills-category">
      <h3>Programming Languages</h3>
      <div class="tech-grid">
        <div class="tech-card">
          <Icon icon="python" size="2em" />
          <span>Python</span>
        </div>
        <div class="tech-card">
          <Icon icon="golang" size="2em" />
          <span>Go</span>
        </div>
        <div class="tech-card">
          <Icon icon="javascript" size="2em" />
          <span>JavaScript</span>
        </div>
        <div class="tech-card">
          <Icon icon="typescript" size="2em" />
          <span>TypeScript</span>
        </div>
        <div class="tech-card">
          <Icon icon="java" size="2em" />
          <span>Java</span>
        </div>
        <div class="tech-card">
          <Icon icon="php" size="2em" />
          <span>PHP</span>
        </div>
        <div class="tech-card">
          <Icon icon="database" size="2em" />
          <span>SQL</span>
        </div>
      </div>
    </div>

    <div class="skills-category">
      <h3>Frameworks & Libraries</h3>
      <div class="tech-grid">
        <div class="tech-card">
          <Icon icon="fastapi" size="2em" />
          <span>FastAPI</span>
        </div>
        <div class="tech-card">
          <Icon icon="nodejs" size="2em" />
          <span>Node.js</span>
        </div>
        <div class="tech-card">
          <Icon icon="spring" size="2em" />
          <span>Spring Boot</span>
        </div>
        <div class="tech-card">
          <Icon icon="react" size="2em" />
          <span>React</span>
        </div>
        <div class="tech-card">
          <Icon icon="nextjs" size="2em" />
          <span>Next.js</span>
        </div>
        <div class="tech-card">
          <Icon icon="svelte" size="2em" />
          <span>Svelte</span>
        </div>
      </div>
    </div>

    <div class="skills-category">
      <h3>Developer Technologies</h3>
      <div class="tech-grid">
        <div class="tech-card">
          <Icon icon="aws" size="2em" />
          <span>AWS</span>
        </div>
        <div class="tech-card">
          <Icon icon="gcp" size="2em" />
          <span>GCP</span>
        </div>
        <div class="tech-card">
          <Icon icon="postgresql" size="2em" />
          <span>PostgreSQL</span>
        </div>
        <div class="tech-card">
          <Icon icon="pytorch" size="2em" />
          <span>PyTorch</span>
        </div>
        <div class="tech-card">
          <Icon icon="snowflake" size="2em" />
          <span>Snowflake</span>
        </div>
      </div>
    </div>

    <div class="skills-category">
      <h3>Business & Finance</h3>
      <div class="tech-grid">
        <div class="tech-card">
          <Icon icon="excel" size="2em" />
          <span>Microsoft Excel</span>
        </div>
        <div class="tech-card">
          <Icon icon="chart" size="2em" />
          <span>Financial Modeling</span>
        </div>
        <div class="tech-card">
          <Icon icon="file-spreadsheet" size="2em" />
          <span>Financial Analysis</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .box {
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    padding: 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
  }

  .skills h2 {
    font-size: var(--text-xl);
    margin-bottom: 2rem;
  }

  .skills-grid {
    display: grid;
    gap: 2rem;
  }

  .skills-category h3 {
    color: var(--gray-200);
    font-size: var(--text-lg);
    margin-bottom: 1rem;
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 1rem;
  }

  .tech-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem;
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    color: var(--gray-300);
    transition: transform 0.2s ease, background 0.2s ease;
  }

  .tech-card:hover {
    transform: translateY(-2px);
    background: var(--gradient-inverse);
    color: var(--gray-200);
  }

  .tech-card span {
    font-size: var(--text-sm);
    text-align: center;
  }

  @media (min-width: 50em) {
    .box {
      border-radius: 1.5rem;
      padding: 2.5rem;
    }

    .skills h2 {
      font-size: var(--text-2xl);
    }

    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 4rem 3rem;
    }

    .tech-grid {
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    }
  }
</style>