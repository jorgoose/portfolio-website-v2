---
import "../styles/global.css";

interface Props {
  title?: string | undefined;
  description?: string | undefined;
}

const {
  title = "Home | Logan Jorgensen",
  description = "The personal site of Logan Jorgensen. Discover my portfolio and learn about my experience as a developer. Explore projects, skills, and more on my personal website.",
} = Astro.props;
---

<meta charset="UTF-8" />
<meta property="og:title" content={title} />

<meta name="description" property="og:description" content={description} />
<meta name="viewport" content="width=device-width" />
<meta property="og:type" content="website" />
<meta name="generator" content={Astro.generator} />
<meta
  property="og:image"
  content="https://github.com/jorgoose/portfolio-website-v2/blob/main/public/assets/projects/portfolio-site-v2.png?raw=true"
/>

<title>{title}</title>

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Logan Jorgensen",
  "url": "https://loganjorgensen.com",
  "image": "https://loganjorgensen.com/assets/profile/linkedin_pfp.webp",
  "jobTitle": "Software Engineer",
  "worksFor": {
    "@type": "Organization",
    "name": "Capital One"
  },
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Chicago",
    "addressRegion": "IL",
    "addressCountry": "US"
  },
  "email": "contact.jorgensen@gmail.com",
  "sameAs": [
    "https://linkedin.com/in/logan-jorgensen",
    "https://github.com/jorgoose",
    "https://jorgensen-logan.medium.com"
  ],
  "knowsAbout": [
    "Software Engineering",
    "Python",
    "JavaScript",
    "TypeScript",
    "React",
    "FastAPI",
    "AWS",
    "Machine Learning"
  ],
  "alumniOf": {
    "@type": "CollegeOrUniversity",
    "name": "Iowa State University"
  }
})} />

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<!-- Async load Google Fonts to avoid render blocking -->
<link
  rel="preload"
  as="style"
  href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,400;0,700;1,400&family=Rubik:wght@500;600&display=swap"
/>
<link
  href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,400;0,700;1,400&family=Rubik:wght@500;600&display=swap"
  rel="stylesheet"
  media="print"
  onload="this.media='all'"
/>
<noscript>
  <link
    href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,400;0,700;1,400&family=Rubik:wght@500;600&display=swap"
    rel="stylesheet"
  />
</noscript>

<script is:inline>
  // This code is inlined in the head to make dark mode instant & blocking
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("theme-dark");

  if (typeof localStorage !== "undefined") {
    // Watch the document element and persist user preference when it changes.
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("theme-dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>
