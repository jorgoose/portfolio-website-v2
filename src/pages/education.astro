---
import BaseLayout from "../layouts/BaseLayout.astro";
import Grid from "../components/Grid.astro";
import Tag from "../components/Tag.astro";

import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";
---

<BaseLayout
  title="Education | Logan Jorgensen"
  description="Learn about Logan Jorgensen's education and certifications"
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8 justify-content-center">
      <Hero
        title="Education"
        tagline="My academic background and professional certifications."
        align="start"
      />

      <!-- Education Cards -->
      <div class="education-grid">
        <!-- Iowa State University -->
        <div class="edu-card">
          <h3 class="edu-card__title">Iowa State University</h3>
          <p class="edu-card__degree">B.S. in Computer Science</p>
          <p class="edu-card__detail">Minor: Data Science</p>
          <p class="edu-card__date">August 2021 - May 2024</p>
          <p class="edu-card__location">Ames, IA</p>
          <div class="edu-card__tags">
            <Tag>GPA: 3.65</Tag>
          </div>
        </div>
        <!-- Nihon University -->
        <div class="edu-card">
          <h3 class="edu-card__title">Nihon University</h3>
          <p class="edu-card__degree">Study Abroad Program</p>
          <p class="edu-card__detail">Focus: Technical Communication</p>
          <p class="edu-card__date">May 2023 - June 2023</p>
          <p class="edu-card__location">Tokyo, Japan</p>
        </div>
      </div>

      <!-- Certifications Section -->
      <Hero title="Certifications" align="start" />
      <Grid>
        <li>
          <div class="card">
            <div class="card__image">
              <img
                src="https://images.credly.com/images/0e284c3f-5164-4b21-8660-0d84737941bc/twitter_thumb_201604_image.png"
                alt="AWS Solutions Architect Associate Certification"
              />
            </div>
            <div class="card__content">
              <h3 class="card__title">AWS Certified Solutions Architect</h3>
              <p class="cert-detail">Associate Level</p>
              <p class="cert-detail">Issued: July 2024</p>
            </div>
          </div>
        </li>
        <li>
          <div class="card">
            <div class="card__image">
              <img
                src="https://images.credly.com/images/b9feab85-1a43-4f6c-99a5-631b88d5461b/image.png"
                alt="AWS Developer Associate Certification"
              />
            </div>
            <div class="card__content">
              <h3 class="card__title">AWS Certified Developer</h3>
              <p class="cert-detail">Associate Level</p>
              <p class="cert-detail">Issued: December 2024</p>
            </div>
          </div>
        </li>
      </Grid>

      <ContactCTA />
    </main>
  </div>

  <style>
    /* Education Grid */
    .education-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    @media (min-width: 50em) {
      .education-grid {
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
      }
    }

    /* Education Card - Simple text-based design */
    .edu-card {
      padding: 1.5rem;
      border-radius: 0.75rem;
      border: 1px solid var(--gray-800);
      background: var(--gradient-subtle);
    }

    .edu-card__title {
      font-size: var(--text-lg);
      margin-bottom: 0.75rem;
    }

    .edu-card__degree {
      font-size: var(--text-md);
      color: var(--gray-200);
      margin-bottom: 0.25rem;
    }

    .edu-card__detail {
      color: var(--gray-300);
      margin-bottom: 0.25rem;
    }

    .edu-card__date {
      color: var(--gray-400);
      font-size: var(--text-sm);
      margin-bottom: 0.25rem;
    }

    .edu-card__location {
      color: var(--gray-400);
      font-size: var(--text-sm);
      margin-bottom: 0.75rem;
    }

    .edu-card__tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 0.5rem;
    }

    /* Certification Cards */
    .card {
      display: flex;
      flex-direction: column;
      border-radius: 0.5rem;
      overflow: hidden;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
      padding: 1rem;
    }

    .card__image {
      position: relative;
      padding-top: 56.25%;
      overflow: hidden;
      border-radius: 0.5rem;
      background: var(--gradient-subtle);
    }

    .card__image img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: contain;
      padding: 1rem;
    }

    .card__title {
      margin-top: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .cert-detail {
      color: var(--gray-300);
      margin-bottom: 0.25rem;
    }
  </style>
</BaseLayout>
